html
button
input
select
textarea
	color $font_color

body 
	background #fff
	font-family 'Open Sans', Helvetica, Arial, sans-serif
	font-weight normal
	font-size 16px
	line-height 24px
	padding-top 68px
	text-align center
	vertical-align top

::selection 
	background #b3d4fc
	text-shadow none

fieldset 
	border 0
	margin 0
	padding 0

h1, h2, h3, h4, h5, h6
	font-weight normal

hr 
	display block
	height 1px
	border 0
	border-top 1px solid #ccc
	margin 1em 0
	padding 0

img 
	vertical-align middle

textarea 
	resize vertical

*,
*:before,
*:after 
	box-sizing border-box


.block
	padding 6em 0

	.block-title
		font-size 1.9em
		font-weight normal
		text-transform uppercase
		text-align center
		margin 0 0 60px 0

		&:after
			display block
			content ""
			height 1px
			width 50px
			background-color #ccc
			margin 30px auto 30px


.clearfix:before
.clearfix:after 
	content " "
	display table


.clearfix:after 
	clear both


.clearfix 
	*zoom 1

.wrapper
	display block
	margin 0 auto
	max-width 1200px
	padding 0 1em
	position relative
	text-align center
	width 98%

